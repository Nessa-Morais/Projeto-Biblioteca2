@model ICollection<Livro>
@{
    ViewData["Title"] = "Listagem";
}
<h2>Listagem de Livros</h2>
<h4>@ViewData["msg"]</h4>



             <div class="row">
            <div class="col-md-12"> 
            <form asp-controller="Livro" asp-action="Listagem" method="Get">
                
                
                    
                   
                   <div class="form-group mb-2 mx-sm-3">
                    <p style="float:left; margin-right:10px;">Pesquisar: <input type="text" name="q" /></p>
                    </div>

                    <div class="form-group mb-2">
                    <p>Ordenação:
                        <select name="ordem">
                            <option value="t">Título</option>
                            <option value="a">Autor</option>
                        </select>
                         <input type="submit" value="buscar" />
                    </p>
                   </div>

                   
                
            </form>
           </div>
</div>



<div class="row">
    <div class="col-md-12">
@if (Model.Count != 0)
{


    <table class="table table-striped">

        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Autor</th>
                <th>Ano</th>
            </tr>
        </thead>
        
        
               
        <tbody>
             @foreach (Livro l in Model)
            {
           
                <tr>
                    <td>@l.Id</td>
                    <td>@l.Titulo</td>
                    <td>@l.Autor</td>
                    <td>@l.Ano</td>
                    <td>
                        <a href="/Livro/Edicao?id=@l.Id">Editar</a>
                        
                    </td>
                </tr>
            }
        </tbody>
        
            

    </table>
     

   @for(int i = 1; i <=(int)ViewData["quantpaginas"];i++){ // paginação cria os links para as pginas 
        <a href="/Livro/Listagem?p=@i" >@i,</a>

    }
    }else{
     <strong class="text-center">Nenhum registro encontrado</strong>
}
</div>
</div>



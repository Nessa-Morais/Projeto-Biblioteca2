@model Usuario
@{
    ViewData["Title"] = "Edição de Usuarios";
}

<h1 class="row justify-content-md-center">Edição de Usuarios</h1>
<div class="row justify-content-md-center">
    <form asp-action="Editar" method="POST" class="col-md-4">
        <fieldset>
            <legend>Usuario</legend>
            <div class="form-group">
                <label asp-for="Nome">Nome</label>
                <input asp-for="Nome" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Login">Login</label>
                <input asp-for="Login" class="form-control"/>
            </div>
      
            
            <div class="form-group">
                <label asp-for="Senha">Senha</label>
                <input type="password" asp-for="Senha" class="form-control"/>
            </div>
            
             <div class="form-group">
                <select name="tipo" id="UserTipo">
                <option value="@Usuario.ADMIN">Administrador</option>
                <option value="@Usuario.PADRAO">Padrão</option>
                </select>
            </div>
           
        </fieldset>
        <input type="number" asp-for="Id">
        <input asp-for="Id" type="hidden">
        <input type="submit" value="Atualizar" class="btn btn-primary"/>
    </form>
</div>